# Biomni Configuration
BIOMNI_LLM_MODEL=claude-sonnet-4-20250514
BIOMNI_DATA_PATH=/path/to/external/biomni_data
BIOMNI_TIMEOUT_SECONDS=600
BIOMNI_USE_TOOL_RETRIEVER=true
BIOMNI_BASE_URL=
BIOMNI_API_KEY=EMPTY

# API Keys (required by Biomni)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# UI Configuration
SESSION_DATA_PATH=/path/to/external/sessions
LOG_LEVEL=INFO
CHAINLIT_PORT=8000
CHAINLIT_HOST=0.0.0.0

# File Upload Configuration
FILE_UPLOAD_ENABLED=true
MAX_FILE_SIZE_MB=100
FILE_RETENTION_HOURS=24
ENABLE_FILE_SCANNING=false
# ALLOWED_FILE_TYPES=pdf,docx,txt,png,jpg,csv,json,fasta,fastq,bed,vcf  # Override default types

# Session Management
SESSION_CLEANUP_HOURS=24
MAX_SESSION_DURATION_HOURS=12
MAX_CONCURRENT_SESSIONS=10

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5